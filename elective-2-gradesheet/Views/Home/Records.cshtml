@using elective_2_gradesheet.Data.Entities
@using elective_2_gradesheet.Helpers
@model RecordsViewModel

@{
    ViewData["Title"] = "All Grade Records";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary text-center"><i class="fas fa-database me-2"></i> All Grade Records</h2>

    <div class="card shadow-sm mb-4 rounded-lg">
        <div class="card-header text-white py-2 rounded-top-lg" style="background-color: #03A9F4;">
            <h5 class="mb-0"><i class="fas fa-filter me-2"></i> Filter Records</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Records" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Search by Name/Activity:</label>
                        <input type="text" name="searchString" class="form-control rounded-md" value="@Model.CurrentSearch" placeholder="Student name or activity..." />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Filter by Section:</label>
                        <select name="sectionId" asp-items="Model.Sections" class="form-control rounded-md">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Filter by Period:</label>
                        <select name="period" asp-items="Html.GetEnumSelectList<GradingPeriod>()" class="form-control rounded-md">
                            <option value="">All Periods</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm">
                            <i class="fas fa-search me-1"></i> Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.StudentGroups.Any())
    {
        @foreach (var studentGroup in Model.StudentGroups)
        {
            <div class="card mb-3 shadow-sm rounded-lg" id="student-card-@studentGroup.StudentId">
                <div class="card-header text-white py-2 rounded-top-lg d-flex justify-content-between align-items-center"
                     style="background-color: #36454F;">
                    <h5 class="mb-0">
                        <a asp-action="StudentProfile" asp-route-id="@studentGroup.StudentId" class="text-white text-decoration-none student-profile-link" data-student-id="@studentGroup.StudentId">
                            <i class="fas fa-user-circle me-2"></i> @studentGroup.StudentFullName - @studentGroup.StudentNumber
                        </a>
                        <span class="badge bg-secondary rounded-pill px-2 py-1 ms-2">@studentGroup.SectionName</span>
                    </h5>
                    <button class="btn btn-link text-white p-0 ms-auto" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseStudent_@studentGroup.StudentId" aria-expanded="false"
                            aria-controls="collapseStudent_@studentGroup.StudentId" style="text-decoration: none;">
                        <i class="fas fa-chevron-down collapse-icon"></i>
                    </button>
                </div>
                <div id="collapseStudent_@studentGroup.StudentId" class="collapse">
                    <div class="card-body p-0">
                        @if (studentGroup.ActivitiesByPeriod.Any())
                        {
                            @foreach (var periodGroup in studentGroup.ActivitiesByPeriod)
                            {
                                <div class="p-3 bg-light border-bottom d-flex justify-content-between align-items-center">
                                    <strong class="text-dark">Period: @periodGroup.Key</strong>
                                    <span class="badge bg-primary rounded-pill px-2 py-1">Total Activities: @periodGroup.Value.Count</span>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover mb-0">
                                        <thead class="bg-light">
                                            <tr>
                                                <th class="ps-3">Activity Name</th>
                                                <th>Status</th>
                                                <th>Score</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in periodGroup.Value)
                                            {
                                                <tr class="@(item.Status == "Missing" ? "table-warning" : "")">
                                                    <td class="ps-3">@item.ActivityName</td>
                                                    <td>@item.Status</td>
                                                    <td>@item.Points / @item.MaxPoints</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="p-3 text-muted text-center">No activities found for the selected filters for this student.</p>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center rounded-lg shadow-sm" role="alert">
            <i class="fas fa-info-circle me-2"></i> No student records found matching your criteria.
        </div>
    }

    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @{
                var prevDisabled = !Model.StudentGroups.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.StudentGroups.HasNextPage ? "disabled" : "";
            }
            <li class="page-item @prevDisabled">
                <a asp-action="Records"
                   asp-route-sortOrder="@Model.CurrentSort"
                   asp-route-pageNumber="@(Model.StudentGroups.PageIndex - 1)"
                   asp-route-searchString="@Model.CurrentSearch"
                   asp-route-sectionId="@Model.CurrentSectionId"
                   asp-route-period="@Model.CurrentPeriod"
                   class="page-link rounded-pill mx-1">
                    Previous
                </a>
            </li>
            <li class="page-item @nextDisabled">
                <a asp-action="Records"
                   asp-route-sortOrder="@Model.CurrentSort"
                   asp-route-pageNumber="@(Model.StudentGroups.PageIndex + 1)"
                   asp-route-searchString="@Model.CurrentSearch"
                   asp-route-sectionId="@Model.CurrentSectionId"
                   asp-route-period="@Model.CurrentPeriod"
                   class="page-link rounded-pill mx-1">
                    Next
                </a>
            </li>
        </ul>
    </nav>
</div>

@section Scripts {
    <style>
        .highlight-record {
            transition: background-color 0.5s ease-in-out;
            background-color: #e9f5ff; /* A light blue highlight */
            border: 2px solid #007bff;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Add event listeners for collapse icons to rotate
            var collapseToggles = document.querySelectorAll('.card-header button[data-bs-toggle="collapse"]');
            collapseToggles.forEach(function(toggle) {
                var collapseElement = document.querySelector(toggle.getAttribute('data-bs-target'));
                var icon = toggle.querySelector('.collapse-icon');

                // Initial state check (if you want some to be open by default)
                if (collapseElement.classList.contains('show')) {
                    icon.classList.add('fa-rotate-180');
                }

                collapseElement.addEventListener('show.bs.collapse', function () {
                    icon.classList.add('fa-rotate-180');
                });

                collapseElement.addEventListener('hide.bs.collapse', function () {
                    icon.classList.remove('fa-rotate-180');
                });
            });

            // Handle scroll-to-student functionality
            document.querySelectorAll('.student-profile-link').forEach(link => {
                link.addEventListener('click', function() {
                    sessionStorage.setItem('scrollToStudentId', this.getAttribute('data-student-id'));
                });
            });

            const studentId = sessionStorage.getItem('scrollToStudentId');
            if (studentId) {
                const studentCard = document.getElementById(`student-card-${studentId}`);
                if (studentCard) {
                    studentCard.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    studentCard.classList.add('highlight-record');
                    setTimeout(() => {
                        studentCard.classList.remove('highlight-record');
                    }, 2000); // Remove highlight after 2 seconds
                }
                sessionStorage.removeItem('scrollToStudentId');
            }
        });
    </script>
}