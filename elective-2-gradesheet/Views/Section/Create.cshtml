@model elective_2_gradesheet.Data.Entities.Section

@{
    ViewData["Title"] = "Create Section";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-graduation-cap"></i> Create New Section
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Section Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., CS101-A, MATH101-B" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">Enter a unique name for this section.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SchoolYear" class="form-label">School Year</label>
                            <input asp-for="SchoolYear" class="form-control" placeholder="e.g., 2024-2025" />
                            <span asp-validation-for="SchoolYear" class="text-danger"></span>
                            <div class="form-text">Format: YYYY-YYYY (e.g., 2024-2025)</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label asp-for="IsActive" class="form-check-label">
                                    Active Section
                                </label>
                                <div class="form-text">Active sections are available for student enrollment and grade management.</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Sections
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Section
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
