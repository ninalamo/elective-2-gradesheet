@model elective_2_gradesheet.Data.Entities.Section

@{
    ViewData["Title"] = "Delete Section";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Section
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>

                    <p>Are you sure you want to delete the following section?</p>

                    <div class="card bg-light">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Section Name:</dt>
                                <dd class="col-sm-9">@Model.Name</dd>
                                <dt class="col-sm-3">School Year:</dt>
                                <dd class="col-sm-9">@Model.SchoolYear</dd>
                                <dt class="col-sm-3">Status:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </dd>
                                <dt class="col-sm-3">Students:</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-info">@Model.Students.Count</span>
                                </dd>
                                <dt class="col-sm-3">Activity Templates:</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-warning">@Model.ActivityTemplates.Count</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.Students.Any() || Model.ActivityTemplates.Any())
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-ban"></i>
                            <strong>Cannot Delete:</strong> This section contains @Model.Students.Count student(s) and @Model.ActivityTemplates.Count activity template(s). 
                            Please move or delete all students and activity templates before deleting this section.
                        </div>
                        
                        <div class="d-flex justify-content-start">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Sections
                            </a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Delete" method="post" class="mt-3">
                            <input asp-for="Id" type="hidden" />
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Sections
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Yes, Delete Section
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
